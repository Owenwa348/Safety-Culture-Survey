generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user_excel {
  id                Int      @id @default(autoincrement())
  email_user        String   @unique
  company_user      String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Admin {
  id                Int      @id @default(autoincrement())
  name_admin        String
  email_admin       String   @unique
  company_admin     String
  phone_admin       String   @unique
  password_admin    String
  role_admin        String   @default("admin") // เป็น admin
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

